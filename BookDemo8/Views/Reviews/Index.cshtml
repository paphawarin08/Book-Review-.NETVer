@model IEnumerable<BookDemo8.BookReviews>

<p class="create-btn-container">
    <a href="@Url.Action("Create", "Reviews")" class="btn-circle">
        <i class="fas fa-plus"></i>
    </a>
</p>


<form method="get" action="@Url.Action("Index", "Reviews")" class="search-form">
    <input type="text" name="searchString" placeholder="Search by title or category" value="@Request.QueryString["searchString"]" />
</form>

<div class="container">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4">
                <div class="card">
                    <img src="@Url.Content("~/Content/images/" + item.ImageUrl)" class="card-img-top" alt="Book Image" />
                    <div class="card-body">
                        <h5 class="card-title">@item.BookTitle</h5>

                        <p class="card-text">@item.CreatedAt</p>

                        <div class="card-footer text-center">
                            @Html.ActionLink("แก้ไข", "Edit", new { id = item.ReviewId }, new { @class = "btn btn-brown btn-sm" }) |
                            @Html.ActionLink("ตัวอย่าง", "Details", new { id = item.ReviewId }, new { @class = "btn btn-brown btn-sm" }) |
                            @Html.ActionLink("ลบ", "Delete", new { id = item.ReviewId }, new { @class = "btn btn-brown btn-sm" })
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    body {
        background-color: #FFFFCC; /* พื้นหลังเว็บเป็นสีเหลือง */
    }

    .search-form {
        display: flex;
        align-items: center; /* จัดให้อยู่ตรงกลางในแนวตั้ง */
        justify-content: center; /* จัดให้อยู่ตรงกลางในแนวนอน */
        margin: 20px auto; /* เพิ่มระยะห่างด้านบน-ล่าง */
        width: 100%; /* ให้ฟอร์มขยายเต็มพื้นที่ */
        max-width: 800px; /* กำหนดขนาดสูงสุดของฟอร์ม */
    }

        .search-form input {
            flex-grow: 1; /* ขยายช่อง input ให้กินพื้นที่ที่เหลือ */
            padding: 10px; /* เพิ่ม padding */
            margin-right: 10px; /* เพิ่มระยะห่างระหว่างช่องและปุ่ม */
            border: 1px solid #ccc; /* ขอบสีเทา */
            border-radius: 15px; /* ขอบมน */
            font-size: 16px; /* ขนาดข้อความ */
            min-width: 0; /* ป้องกัน input จากการหดตัว */
        }

    .fa-star {
        color: gold;
    }

    .fa-star-o {
        color: gray;
    }

    .rating {
        margin-bottom: 8px;
        display: flex;
        justify-content: center; /* จัดเรียงให้ดาวอยู่กลาง */
    }

    .card {
        background-color: transparent;
        border-radius: 30px;
        width: 280px;
        height: 450px;
        padding: 20px;
        margin: 30px;
    }

    .card-img-top {
        width: 100%;
        height: 350px;
        object-fit: cover;
        object-position: center;
        border-radius: 30px;
    }

    .card-title {
        font-size: 16px; /* ปรับขนาดตัวอักษรของชื่อหนังสือ */
        font-weight: bold; /* ทำให้ตัวอักษรหนาขึ้น */
        text-align:center;
    }

    .card-text {
        display: -webkit-box;
        -webkit-line-clamp: 3; /* ปรับให้แสดง 3 บรรทัด */
        -webkit-box-orient: vertical;
        overflow: hidden;
        text-overflow: ellipsis;
        line-height: 1.5em;
        max-height: 4.5em; /* ปรับความสูงให้เหมาะสมกับ 3 บรรทัด */
        font-size: 16px;
        color: #333;
        text-align:center;
    }

    .btn-brown {
        background-color: #5A2A21;
        color: white;
        border: none; /* ไม่ให้มีกรอบ */
        border-radius: 30px;
        padding: 5px 12px;
    }

        .btn-brown:hover {
            background-color: white;
            color: #5A2A21;
        }

    /* จัดตำแหน่งไอคอน */
    .create-btn-container {
        position: fixed; /* ตำแหน่งคงที่ */
        top: 100px; /* เว้นระยะห่างจาก header */
        right: 500px; /* เว้นระยะห่างจากขอบขวาของจอ */
        z-index: 1000; /* ทำให้ไอคอนอยู่เหนือองค์ประกอบอื่น */
    }

    /* ปุ่มวงกลม */
    .btn-circle {
        display: flex;
        justify-content: center;
        align-items: center;
        width: 50px; /* ความกว้างของวงกลม */
        height: 50px; /* ความสูงของวงกลม */
        border-radius: 50%; /* ทำให้เป็นวงกลม */
        background-color: #8B4513; /* สีน้ำตาล */
        color: #fff; /* สีไอคอน */
        text-decoration: none; /* ลบเส้นใต้ */
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); /* เพิ่มเงา */
        transition: background-color 0.3s ease, transform 0.3s ease;
    }

        .btn-circle:hover {
            background-color: #5A2A21; /* เปลี่ยนสีพื้นหลังเมื่อ hover */
            color: #ffffff; /* เปลี่ยนสีข้อความเมื่อ hover */
            transform: scale(1.1); /* ขยายเล็กน้อยเมื่อ hover */
        }

        .btn-circle i {
            font-size: 20px; /* ขนาดไอคอน */
        }


</style>
